@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <h3>No machines have been added yet!</h3>
} 

<table class="table table-hover table-responsive-md">
      <thead>
        <th>All Current Machines:</th>
      </thead>
  @foreach(Machine machine in Model)
  {
    <tr>
    <td>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</td>
    </tr>
  }
</table>



<p>@Html.ActionLink("Add new machine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>